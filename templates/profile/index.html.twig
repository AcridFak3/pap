{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg max-w-4xl">
        <h1 class="text-3xl font-bold text-center text-blue-600">Your Profile</h1>

        <div class="flex flex-col items-center mt-6">
            <p class="mt-2 text-lg font-semibold">{{ user.username }}</p>
            <p class="text-gray-600">{{ user.email }}</p>
        </div>

        <div class="mt-8">
            {{ form_start(form, { 'attr': { 'class': 'space-y-4' } }) }}
            <div class="flex flex-col">
                <label class="text-gray-700 font-semibold">Username</label>
                {{ form_widget(form.username, { 'attr': { 'class': 'border rounded p-2 w-full' } }) }}
            </div>

            <div class="flex flex-col">
                <label class="text-gray-700 font-semibold">Full Name</label>
                {{ form_widget(form.fullName, { 'attr': { 'class': 'border rounded p-2 w-full' } }) }}
            </div>
            {{ form_end(form) }}
        </div>

        <div class="mt-8">
            <h2 class="text-2xl font-bold text-gray-800">Change Password</h2>
            {{ form_start(changePasswordForm, { 'attr': { 'class': 'space-y-4' } }) }}
            <div class="flex flex-col">
                <label class="text-gray-700 font-semibold">Current Password</label>
                {{ form_widget(changePasswordForm.currentPassword, { 'attr': { 'class': 'border rounded p-2 w-full' } }) }}
            </div>
            <div class="flex flex-col">
                <label class="text-gray-700 font-semibold">New Password</label>
                {{ form_widget(changePasswordForm.newPassword, { 'attr': { 'class': 'border rounded p-2 w-full' } }) }}
            </div>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Update Password</button>
            {{ form_end(changePasswordForm) }}
        </div>

        <div class="mt-8 text-center">
            <a href="{{ path('forgot_password') }}" class="text-blue-600 hover:underline">Forgot Password?</a>
        </div>
    </div>
{% endblock %}
